{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ComisionesSpiral",
  "version": "0.2.0",
  "identifier": "com.spiralcomisiones.gmork",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5773",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Registro de Comisiones Spiral",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "windowEffects": {
          "effects": [
            "mica"
          ]
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
